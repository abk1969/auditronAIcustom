# API Configuration
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Authentication
REACT_APP_AUTH_COOKIE_NAME=auditron_auth
REACT_APP_AUTH_COOKIE_EXPIRES=7

# Feature Flags
REACT_APP_ENABLE_SOCIAL_LOGIN=true
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true

# Monitoring
REACT_APP_SENTRY_DSN=your_sentry_dsn_here
REACT_APP_ANALYTICS_ID=your_analytics_id_here

# Performance
REACT_APP_API_TIMEOUT=30000
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_CACHE_DURATION=3600

# Misc
REACT_APP_VERSION=$npm_package_version
NODE_ENV=development 